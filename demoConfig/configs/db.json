{

    "host": {
        "doc": "database hostname",
        "default": "localhost",
        "env" : "DB_HOST"

    },
    "port": {
        "doc": "database port",
        "format": "int",
        "default": 27017,
        "env":"DB_PORT"

    },
    "database": {
        "default": "brandcampaignmanager",
        "env":"DB_NAME"

    },
    "hosts": {
        "default":["localhost", "localhost", "localhost"],
        "env":"DB_HOSTS"
    },
    "ports":{
        "default":[27017,27017,27017],
        "env":"DB_PORTS"
     },
    "replEnabled": {
        "default": false,
        "env":"DB_REP_ENABLED"

    },
    "replName": {
        "default": "rs0",
        "env":"DB_REPL_NAME"

    },
    "writeconcern": {
        "doc": "the write concern for the connection",
        "default": 1,
        "env":"DB_WRITE_CONCERN"

    },
    "maxTimeMS": 5000,
    "authEnabled": {
        "default": false,
        "env":"DB_AUTH_ENABLED"

    },
    "userName": {
        "default": "",
        "env":"DB_USERNAME"
    },
    "password": {
        "default": "",
        "env":"DB_PASSWORD"
    },
    "authSource": {
        "default": "",
        "env":"DB_AUTH_SOURCE"
    },
    "debugEnabled": {
        "doc": "Enable mongoose query debugging",
        "default": false,
        "env": "DB_DEBUG_ENABLED"
    }
}
