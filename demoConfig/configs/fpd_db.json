{

    "host": {
        "doc": "database hostname",
        "default": "127.0.0.1",
        "env" : "MONGOFPD_DB_HOST"

    },
    "port": {
        "doc": "database port",
        "format": "int",
        "default": 27017

    },
    "database": {
        "default": "nestle_fpd"

    },
    "hosts": {
        "default":["localhost", "localhost", "localhost"],
        "env":"FPD_DB_HOSTS"
    },
    "ports":{
        "default":[27017,27017,27017],
        "env":"FPD_DB_PORTS"
    },
    "replEnabled": {
        "default": false,
        "env": "FPD_DB_REP_ENABLED"
    },
    "replName": {
        "default": "rs0",
        "env":"FPD_DB_REPL_NAME"
    },
    "writeconcern": {
      "doc": "the write concern for the connection",
      "default": 1,
      "env":"FPD_DB_WRITE_CONCERN"
    },
    "maxTimeMS": 5000,
    "authEnabled": {
        "default": false,
        "env":"FPD_DB_AUTH_ENABLED"

    },
    "userName": {
        "default": "",
        "env":"FPD_DB_USERNAME"
    },
    "password": {
        "default": "",
        "env":"FPD_DB_PASSWORD"
    },
    "authSource": {
        "default": "",
        "env":"FPD_DB_AUTH_SOURCE"
    }
}
